
@{
    ViewBag.Title = "Index";
   
}

<section class="style-default-bright">
    <div class="section-header">
        <h2 class="text-primary">Danh sách khách hàng đặt phòng</h2>
    </div>

    <div class="section-body">
        <div class="row">

            <div class="col-lg-12">
                <div class="table-responsive">
                    <table id="orderedCustomersTable" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên khách hàng</th>
                                <th>Tên phòng</th>
                                <th>Ngày vào</th>
                           
                                <th>Tạo bởi</th>
                                
                            </tr>
                        </thead>
                    </table>
                </div><!--end .table-responsive -->
            </div><!--end .col -->
        </div>
    </div><!--end .section-body -->
</section>

<script>
    $('#orderedCustomersTable').dataTable({
        destroy: true,
        serverSide: true,
        dom: 'T<"clear">lfrtip',
        language: {
            lengthMenu: '_MENU_ entries per page',
            search: '<i class="fa fa-search"></i>',
            paginate: {
                "previous": '<i class="fa fa-angle-left"></i>',
                "next": '<i class="fa fa-angle-right"></i>'
            }
        },
        ajax: {
            url: "@Url.Action("LoadOrderedCustomersTable", "OrderedCustomer")",
            type: "POST"
        },
        columns: [
            { data: "Id", "orderable": false },
            { data: "CustomerName", "orderable": false },
            { data: "RoomName", "orderable": false },
            { data: "CheckInDate", "orderable": false },
            { data: "CreatedBy", "orderable": false }
          
        ]
    });
</script>
