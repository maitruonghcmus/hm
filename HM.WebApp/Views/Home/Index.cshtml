@{
    ViewBag.Title = "Index";
    var revByDay = (double)ViewBag.RevByDay;
    var revByWeek = (double)ViewBag.RevByWeek;
    var revByMonth = (double)ViewBag.RevByMonth;
    var revByYear = (double)ViewBag.RevByYear;

    var newCustomer = ViewBag.NewCustomer as IEnumerable<HM.DataModels.Customer>;
    var checkoutRecent = ViewBag.CheckOutRecent as IEnumerable<HM.DataModels.Customer>;
    var revByRoomType = ViewBag.RevenueByRoomType as Dictionary<string, double>;
}

<section>
    <div class="section-body">
        <div class="row">
            <!-- BEGIN ALERT - REVENUE -->
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <div class="card-body no-padding">
                        <div class="alert alert-callout alert-success no-margin">
                            <h1 class="pull-right text-success"><i class="md md-timer"></i></h1>
                            <strong class="text-xl">@(revByDay.ToString("#,##0"))</strong><br />
                            <span class="opacity-50">Doanh thu theo ngày</span>
                        </div>
                    </div><!--end .card-body -->
                </div><!--end .card -->
            </div><!--end .col -->
            <!-- END ALERT - REVENUE -->
            <!-- BEGIN ALERT - VISITS -->
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <div class="card-body no-padding">
                        <div class="alert alert-callout alert-success no-margin">
                            <h1 class="pull-right text-success"><i class="fa fa-calendar-o"></i></h1>
                            <strong class="text-xl">@(revByWeek.ToString("#,##0"))</strong><br />
                            <span class="opacity-50">Doanh thu theo tuần</span>
                        </div>
                    </div><!--end .card-body -->
                </div><!--end .card -->
            </div><!--end .col -->
            <!-- END ALERT - VISITS -->
            <!-- BEGIN ALERT - BOUNCE RATES -->
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <div class="card-body no-padding">
                        <div class="alert alert-callout alert-success no-margin">
                            <h1 class="pull-right text-success"><i class="fa fa-calendar"></i></h1>
                            <strong class="text-xl">@(revByMonth.ToString("#,##0"))</strong><br />
                            <span class="opacity-50">Doanh thu theo tháng</span>
                        </div>
                    </div><!--end .card-body -->
                </div><!--end .card -->
            </div><!--end .col -->
            <!-- END ALERT - BOUNCE RATES -->
            <!-- BEGIN ALERT - TIME ON SITE -->
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <div class="card-body no-padding">
                        <div class="alert alert-callout alert-success no-margin">
                            <h1 class="pull-right text-success"><i class="fa fa-dollar"></i></h1>
                            <strong class="text-xl">@(revByYear.ToString("#,##0"))</strong><br />
                            <span class="opacity-50">Doanh thu theo năm</span>
                        </div>
                    </div><!--end .card-body -->
                </div><!--end .card -->
            </div><!--end .col -->
            <!-- END ALERT - TIME ON SITE -->

        </div><!--end .row -->

        <div class="row">

            <div class="col-md-6">
                <div class="card">
                    <div class="card-head">
                        <header>Registration history</header>
                        <div class="tools">
                            <a class="btn btn-icon-toggle btn-refresh"><i class="md md-refresh"></i></a>
                            <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
                            <a class="btn btn-icon-toggle btn-close"><i class="md md-close"></i></a>
                        </div>
                    </div><!--end .card-head -->
                    <div class="card-body no-padding height-9">
                        <div class="row">
                            <div class="col-sm-6 hidden-xs">
                                <div class="force-padding text-sm text-default-light">
                                    <p>
                                        <i class="md md-mode-comment text-primary-light"></i>
                                        The registrations are measured from the time that the redesign was fully implemented and after the first e-mailing.
                                    </p>
                                </div>
                            </div><!--end .col -->
                            <div class="col-sm-6">
                                <div class="force-padding pull-right text-default-light">
                                    <h2 class="no-margin text-primary-dark"><span class="text-xxl">66.05%</span></h2>
                                    <i class="fa fa-caret-up text-success fa-fw"></i> more registrations
                                </div>
                            </div><!--end .col -->
                        </div><!--end .row -->
                        <div class="stick-bottom-left-right force-padding">
                            <div id="flot-registrations" class="flot height-5" data-title="Registration history" data-color="#0aa89e"></div>
                        </div>
                    </div><!--end .card-body -->
                </div><!--end .card -->
            </div><!--end .col -->

            <div class="col-md-6">
                <div class="card">
                    <div class="card-head">
                        <header>Registration history</header>
                        <div class="tools">
                            <a class="btn btn-icon-toggle btn-refresh"><i class="md md-refresh"></i></a>
                            <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
                            <a class="btn btn-icon-toggle btn-close"><i class="md md-close"></i></a>
                        </div>
                    </div><!--end .card-head -->
                    <div class="card-body no-padding height-9">
                        <div class="row">
                            <div class="col-sm-6 hidden-xs">
                                <div class="force-padding text-sm text-default-light">
                                    <p>
                                        <i class="md md-mode-comment text-primary-light"></i>
                                        The registrations are measured from the time that the redesign was fully implemented and after the first e-mailing.
                                    </p>
                                </div>
                            </div><!--end .col -->
                            <div class="col-sm-6">
                                <div class="force-padding pull-right text-default-light">
                                    <h2 class="no-margin text-primary-dark"><span class="text-xxl">66.05%</span></h2>
                                    <i class="fa fa-caret-up text-success fa-fw"></i> more registrations
                                </div>
                            </div><!--end .col -->
                        </div><!--end .row -->
                        <div class="stick-bottom-left-right force-padding">
                            <div id="flot-registrations" class="flot height-5" data-title="Registration history" data-color="#0aa89e"></div>
                        </div>
                    </div><!--end .card-body -->
                </div><!--end .card -->
            </div><!--end .col -->

        </div><!--end .row -->

        <div class="row">

            <div class="col-md-4">
                <div class="card ">
                    <div class="card-head">
                        <header>Khách hàng mới</header>
                    </div><!--end .card-head -->
                    <div class="card-body no-padding height-9 scroll">
                        <ul class="list divider-full-bleed" data-sortable="true">
                            @{
                                if (newCustomer != null)
                                {
                                    foreach (var item in newCustomer)
                                    {
                                        <li class="tile">
                                            <div class="checkbox checkbox-styled tile-text">
                                                <label>
                                                    <span>@item.Name - @item.Phone</span>
                                                </label>
                                            </div>
                                        </li>
                                    }
                                }
                            }
                        </ul>
                    </div><!--end .card-body -->
                </div><!--end .card -->
            </div><!--end .col -->

            <div class="col-md-4">
                <div class="card ">
                    <div class="card-head">
                        <header>Khách vừa trả phòng</header>
                    </div><!--end .card-head -->
                    <div class="card-body no-padding height-9 scroll">
                        <ul class="list divider-full-bleed" data-sortable="true">
                            @{
                                if (checkoutRecent != null)
                                {
                                    foreach (var item in checkoutRecent)
                                    {
                                        <li class="tile">
                                            <div class="checkbox checkbox-styled tile-text">
                                                <label>
                                                    <span>@item.Name - @item.Phone</span>
                                                </label>
                                            </div>
                                        </li>
                                    }
                                }
                            }
                        </ul>
                    </div><!--end .card-body -->
                </div><!--end .card -->
            </div><!--end .col -->

            <div class="col-md-4">
                <div class="card ">
                    <div class="card-head">
                        <header>Doanh thu theo loại phòng</header>
                    </div><!--end .card-head -->
                    <div class="card-body no-padding height-9 scroll">
                        <div class="card-body height-8">
                            @{
                                if (revByRoomType != null)
                                {
                                    var sum = revByRoomType.Values.Sum();
                                    foreach (var item in revByRoomType)
                                    {
                                        <strong>@item.Key</strong>
                                        <div class="progress progress-hairline">
                                            <div class="progress-bar progress-bar-primary-dark" style="width:@(item.Value / sum * 100)%"></div>
                                        </div>
                                    }
                                }
                            }
                        </div><!--end .card-body -->
                    </div><!--end .card-body -->
                </div><!--end .card -->
            </div><!--end .col -->

        </div><!--end .row -->

    </div><!--end .section-body -->
</section>

