@{
    var loggedUsername = HM.WebApp.AppContext.Instance.GetLoggedUser()?.Fullname ?? "Fullname";
    var loggedHotelName = HM.WebApp.AppContext.Instance.GetLoggedHotel()?.Name ?? "Khách sạn";
    var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
}	

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>

    <!-- BEGIN META -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="quản lý khách sạn">
    <meta name="description" content="Phần mềm quản lý khách sạn thông minh">
    <!-- END META -->
    <!-- BEGIN STYLESHEETS -->
    <link href='http://fonts.googleapis.com/css?family=Roboto:300italic,400italic,300,400,500,700,900' rel='stylesheet' type='text/css' />
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/theme-default/bootstrap.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/theme-default/materialadmin.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/theme-default/font-awesome.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/theme-default/material-design-iconic-font.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/theme-default/libs/rickshaw/rickshaw.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/theme-default/libs/morris/morris.core.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/theme-default/libs/DataTables/jquery.dataTables.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/theme-default/libs/DataTables/extensions/dataTables.colVis.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/assets/css/theme-default/libs/DataTables/extensions/dataTables.tableTools.css" />

    <link href="~/Content/assets/css/theme-default/libs/toastr/toastr.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <link href="~/Content/assets/js/alertable/jquery.alertable.css" rel="stylesheet" />
    <!-- END STYLESHEETS -->
    <!-- BEGIN JAVASCRIPT -->
    <script src="~/Content/assets/js/libs/jquery/jquery-1.11.2.min.js"></script>
    <script src="~/Content/assets/js/libs/jquery/jquery-migrate-1.2.1.min.js"></script>

    <script src="~/Content/assets/js/libs/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/libs/spin.js/spin.min.js"></script>
    <script src="~/Content/assets/js/libs/autosize/jquery.autosize.min.js"></script>
    <script src="~/Content/assets/js/libs/moment/moment.min.js"></script>
    <script src="~/Content/assets/js/libs/nanoscroller/jquery.nanoscroller.min.js"></script>

    <script src="~/Content/assets/js/libs/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Content/assets/js/libs/DataTables/extensions/ColVis/js/dataTables.colVis.min.js"></script>
    <script src="~/Content/assets/js/libs/DataTables/extensions/TableTools/js/dataTables.tableTools.min.js"></script>

    <script src="~/Content/assets/js/core/source/App.js"></script>
    <script src="~/Content/assets/js/core/source/AppNavigation.js"></script>
    <script src="~/Content/assets/js/core/source/AppOffcanvas.js"></script>
    <script src="~/Content/assets/js/core/source/AppCard.js"></script>
    <script src="~/Content/assets/js/core/source/AppForm.js"></script>
    <script src="~/Content/assets/js/core/source/AppNavSearch.js"></script>
    <script src="~/Content/assets/js/core/source/AppVendor.js"></script>
    <script src="~/Content/assets/js/libs/toastr/toastr.js"></script>
    <script src="~/Content/assets/js/listjs/list.js"></script>

    <script src="~/Content/assets/js/alertable/jquery.alertable.js"></script>
    <!--Begin validate-->
    <script src="~/Content/assets/js/libs/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/Content/assets/js/libs/jquery-validation/dist/additional-methods.js"></script>
    <!--End validate-->
    <!-- END JAVASCRIPT -->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script type="text/javascript" src="~/Content/assets/js/libs/utils/html5shiv.js?1403934957"></script>
    <script type="text/javascript" src="~/Content/assets/js/libs/utils/respond.min.js?1403934956"></script>
    <![endif]-->
</head>
<body class="menubar-hoverable header-fixed " id="body">

    <!-- BEGIN HEADER-->
    <header id="header">
        <div class="headerbar">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="headerbar-left">
                <ul class="header-nav header-nav-options">
                    <li class="header-nav-brand">
                        <div class="brand-holder">
                            <a href="/">
                                <span class="text-lg text-bold text-primary">HOTLER</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <a class="btn btn-icon-toggle menubar-toggle" data-toggle="menubar" href="javascript:void(0);">
                            <i class="fa fa-bars"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="headerbar-right">
                <ul class="header-nav header-nav-options">
                    <li>
                        <!-- Search form -->
                        <form class="navbar-search" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control search" name="headerSearch" placeholder="Enter your keyword">
                            </div>
                            <button type="submit" class="btn btn-icon-toggle ink-reaction"><i class="fa fa-search"></i></button>
                        </form>
                    </li>
                </ul><!--end .header-nav-options -->
                <ul class="header-nav header-nav-profile">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle ink-reaction" data-toggle="dropdown">
                            <img src="~/Content/assets/img/avatar1.jpg?1403934956" alt="" />
                            <span class="profile-info">
                                @(loggedUsername)
                                <small>@(loggedHotelName)</small>
                            </span>
                        </a>
                        <ul class="dropdown-menu animation-dock">
                            <li class="dropdown-header">Config</li>
                            <li><a href="#"><i class="fa fa-clock-o"></i> Còn @(HM.WebApp.AppContext.Instance.GetDayRemains()) ngày dùng thử</a></li>
                            <li><a href="@Url.Content("~/Account/LogOff")"><i class="fa fa-fw fa-power-off text-danger"></i> Đăng xuất</a></li>
                        </ul><!--end .dropdown-menu -->
                    </li><!--end .dropdown -->
                </ul><!--end .header-nav-profile -->
                
            </div><!--end #header-navbar-collapse -->
        </div>
    </header>
    <!-- END HEADER-->
    <!-- BEGIN BASE-->
    <div id="base">

        <!-- BEGIN OFFCANVAS LEFT -->
        <div class="offcanvas">
        </div><!--end .offcanvas-->
        <!-- END OFFCANVAS LEFT -->
        <!-- BEGIN CONTENT-->
        <div id="content">
            @RenderBody()
        </div><!--end #content-->
        <!-- END CONTENT -->
        <!-- BEGIN MENUBAR-->
        <div id="menubar" class="menubar-inverse ">
            <div class="menubar-fixed-panel">
                <div>
                </div>
                <div class="expanded">
                </div>
            </div>
            <div class="menubar-scroll-panel">
                <!-- BEGIN MAIN MENU -->
                <ul id="main-menu" class="gui-controls">
                    <li>
                        <a href="/" class=@(controllerName == "Home" ? "active" : "")>
                            <div class="gui-icon"><i class="md md-home"></i></div>
                            <span class="title">Home</span>
                        </a>
                    </li><!--end /menu-li -->

                    <li class="gui-folder">
                        <a>
                            <div class="gui-icon"><i class="fa fa-building-o"></i></div>
                            <span class="title">Phòng</span>
                        </a>
                        <!--start submenu -->
                        <ul>
                            <li><a href="@Url.Action("Index", "Room")" class=@(controllerName == "Room" ? "active" : "")><span class="title">Danh sách Phòng</span></a></li>
                            <li><a href="@Url.Action("Index", "RoomType")" class=@(controllerName == "RoomType" ? "active" : "")><span class="title">Loại phòng</span></a></li>
                        </ul><!--end /submenu -->
                    </li><!--end /menu-li -->

                    <li class="gui-folder">
                        <a>
                            <div class="gui-icon"><i class="fa fa-users"></i></div>
                            <span class="title">Khách hàng</span>
                        </a>
                        <!--start submenu -->
                        <ul>
                            <li><a href="@Url.Action("Index", "OrderedCustomer")" class=@(controllerName == "OrderedCustomer" ? "active" : "")><span class="title">Khách hàng đã đặt phòng</span></a></li>
                            <li><a href="@Url.Action("Index", "Customer")" class=@(controllerName == "Customer" ? "active" : "")><span class="title">Khách hàng</span></a></li>
                            <li><a href="@Url.Action("Index", "CustomerType")" class=@(controllerName == "CustomerType" ? "active" : "")><span class="title">Loại khách hàng</span></a></li>
                        </ul><!--end /submenu -->
                    </li><!--end /menu-li -->

                    <li>
                        <a href="#" data-toggle="offcanvas" data-backdrop="true">
                            <div class="gui-icon"><i class="fa fa-credit-card"></i></div>
                            <span class="title">Thanh toán</span>
                        </a>
                    </li><!--end /menu-li -->

                    <li>
                        <a href="@Url.Action("Index","ExtraService")" class=@(controllerName == "ExtraService" ? "active" : "")>
                            <div class="gui-icon"><i class="fa fa-star-o"></i></div>
                            <span class="title">Dịch vụ</span>
                        </a>
                    </li><!--end /menu-li -->

                    <li class="gui-folder">
                        <a>
                            <div class="gui-icon"><i class="fa fa-bar-chart"></i></div>
                            <span class="title">Thống kê</span>
                        </a>
                        <ul>
                            <li><a href="@Url.Action("Index", "PaymentReport")" class=@(controllerName == "PaymentReport" ? "active" : "")><span class="title">Báo cáo doanh thu</span></a></li>
                        </ul><!--end /submenu -->
                    </li>

                    @*<li class="gui-folder">
                        <a>
                            <div class="gui-icon"><i class="fa fa-gear"></i></div>
                            <span class="title">Thiết lập</span>
                        </a>
                        <ul>
                            <li><a href="#"><span class="title">Tài khoản</span></a></li>
                            <li><a href="#"><span class="title">Cài đặt khác</span></a></li>
                        </ul><!--end /submenu -->
                    </li><!--end /menu-li -->*@

                    <li class="gui-folder" @(!HM.WebApp.AppContext.Instance.IsAdministrator() ? "hidden" : "")>
                        <a>
                            <div class="gui-icon"><i class="fa fa-user"></i></div>
                            <span class="title">Quản trị</span>
                        </a>
                        <ul>
                            <li><a href="@Url.Action("Index", "Hotel")" class=@(controllerName == "Hotel" ? "active" : "")><span class="title">Khách sạn</span></a></li>
                            <li><a href="@Url.Action("Index", "User")" class=@(controllerName == "User" ? "active" : "")><span class="title">Người dùng</span></a></li>
                        </ul><!--end /submenu -->
                    </li><!--end /menu-li -->
                </ul><!--end .main-menu -->
                <!-- END MAIN MENU -->
                <div class="menubar-foot-panel">
                    <small class="no-linebreak hidden-folded">
                        <span class="opacity-75">Copyright &copy; 2016</span> <strong>#TeamIron</strong>
                    </small>
                </div>
            </div><!--end .menubar-scroll-panel-->
        </div><!--end #menubar-->
        <!-- END MENUBAR -->
    </div><!--end #base-->
    <!-- END BASE -->

    @RenderSection("scripts", required: false)
</body>
</html>