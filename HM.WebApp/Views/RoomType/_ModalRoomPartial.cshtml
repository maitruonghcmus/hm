<div class="modal right fade" id="modalRoom" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel2">Danh sách phòng</h4>
            </div>

            <div class="modal-body">

                <br />
                <div class="form-group">
                    <input type="text" class="form-control" id="roomName" placeholder="Tên phòng">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="roomRemark" placeholder="Ghi chú">
                </div>
                <div class="btn-group btn-group-justified" role="group" aria-label="Justified button group">
                    <a class="btn btn-primary" role="button" id="btnAddRoom" onclick="createRoom();">Thêm</a>
                    <a class="btn btn-default" role="button" id="btnClear" onclick="clearRoomField()">Nhập lại</a>
                </div>

                <div id="idToLoadroom">
                    @Html.Partial("_RoomListPartial")
                </div>

            </div>

        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->