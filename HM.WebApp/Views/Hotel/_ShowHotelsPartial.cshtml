
@{
    ViewBag.Title = "Index";
    var hotels = ViewBag.Hotels as IEnumerable<HM.DataModels.Hotel>;



}


    <div class="col-lg-12">
        <div class="table-responsive">
            <table id="datatable1" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="sort-alpha">Tên khách sạn</th>
                        <th>Mã số thuế</th>
                        <th>Địa chỉ</th>
                        <th class="sort-alpha">Người liên hệ</th>
                        <th>Điện thoại</th>
                        <th>Mail</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (hotels != null)
                        {
                            foreach (var item in hotels)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.TaxCode</td>
                                    <td>@item.Address</td>
                                    <td>@item.Contact</td>
                                    <td>@item.ContactPhone</td>
                                    <td>@item.ContactMail</td>
                                    <td class="text-right">
                                        <button type="button" class="btn btn-icon-toggle" data-toggle="modal" data-original-title="Edit row" data-target="#modalAddHotel" onclick="editHotel(@item.Id)"><i class="fa fa-pencil"></i></button>
                                        <button type="button" class="btn btn-icon-toggle" data-toggle="tooltip" data-original-title="Delete row" onclick="deleteHotel(@item.Id)"><i class="fa fa-trash-o"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>Dữ liệutTrống</td>
                                <td>Trống</td>
                                <td>Trống</td>
                                <td>4</td>
                                <td>X</td>
                            </tr>

                        }
                    }

                </tbody>
            </table>
        </div><!--end .table-responsive -->
    </div><!--end .col -->

