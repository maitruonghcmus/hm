<div class="col-lg-12">
    <div class="table-responsive">
        <table id="hotelsTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Tên khách sạn</th>
                    <th>Mã số thuế</th>
                    <th>Người liên hệ</th>
                    <th>Tạo bởi</th>
                    <th>Tạo lúc</th>
                    <th>Sửa bởi</th>
                    <th>Sửa lúc</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div><!--end .table-responsive -->
</div><!--end .col -->

<script>
    $('#hotelsTable').dataTable({
        destroy: true,
        serverSide: true,
        language: {
            lengthMenu: '_MENU_ entries per page',
            search: '<i class="fa fa-search"></i>',
            paginate: {
                "previous": '<i class="fa fa-angle-left"></i>',
                "next": '<i class="fa fa-angle-right"></i>'
            }
        },
        ajax: {
            url: "@Url.Action("LoadHotelsTable", "Hotel")",
            type: "POST"
        },
        columns: [
            { data: "Name", "orderable": false },
            { data: "TaxCode", "orderable": false },
            { data: "Contact", "orderable": false },
            { data: "CreatedBy", "orderable": false },
            { data: "CreatedOn", "orderable": false },
            { data: "ModifiedBy", "orderable": false },
            { data: "ModifiedOn", "orderable": false },
            { data: "Command", "orderable": false }
        ]
    });
</script>