@{
    var roles = ViewBag.Roles as IEnumerable<HM.DataModels.Role>;
    var hotels = ViewBag.Hotels as IEnumerable<HM.DataModels.Hotel>;
}

<div class="modal right fade" id="modalAddUser" tabindex="-1" role="dialog" aria-labelledby="modalUserLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modalUserLabel">Thêm tài khoản</h4>
            </div>

            <div class="modal-body">

                <form class="form" role="form">
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtUserFullName">
                        <label for="txtUserFullName">Tên người dùng</label>
                    </div>

                    <div class="form-group">

                        <select id="cbbUserHotel" name="cbbUserHotel" class="form-control">

                            @{
                                <option value="">Khách sạn</option>
                                if (hotels != null)
                                {
                                    foreach (var item in hotels)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            }
                        </select>
                        <label for="cbbUserRole">Chọn</label>
                    </div>

                    <div class="form-group">

                        <select id="cbbUserRole" name="cbbCtmType" class="form-control">

                            @{
                                <option value="">Quyền</option>
                                if (roles != null)
                                {
                                    foreach (var item in roles)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }

                            }
                        </select>
                        <label for="cbbUserRole">Chọn</label>
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" id="txtUsername">
                        <label for="txtUsername">Tài khoản</label>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" id="txtUserPassword">
                        <label for="txtUserPassword">Mật khẩu</label>
                    </div>

                    <br />
                    <div class="btn-group btn-group-justified" role="group" aria-label="Justified button group">
                        <a class="btn btn-primary" role="button" onclick="addUser();" id="btnAddUser">Thêm</a>
                        <a class="btn btn-default" role="button" onclick="clearControl();" id="btnClear">Nhập lại</a>
                    </div>
                </form>

            </div>

        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->

